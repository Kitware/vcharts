[
    "@defaults",
    [
        ["bin", "datum.value"],
        ["discrete", false]
    ],
    {
        "width": ["@value", "width", 800],
        "height": ["@value", "height", 500],
        "padding": ["@value", "padding", {"top": 20, "bottom": 50, "left": 50, "right": 10}],
        "predicates": [
            {
                "name": "tooltip",
                "type": "==",
                "operands": [{"signal": "tooltip._id"}, {"arg": "id"}]
            }
        ],
        "data": [
            {
                "name": "series",
                "values": ["@value", "values"],
                "transform": [
                    "@if",
                    ["@value", "discrete"],
                    [
                        {
                            "type": "formula",
                            "expr": ["@value", "bin"],
                            "field": "bin"
                        },
                        {
                            "type": "aggregate",
                            "groupby": ["bin"],
                            "summarize": [
                                {
                                    "field": "*",
                                    "ops": ["count"]
                                }
                            ]
                        }
                    ],
                    [
                        {
                            "type": "formula",
                            "expr": ["@value", "bin"],
                            "field": "value"
                        },
                        {
                            "type": "bin",
                            "field": "value",
                            "min": [
                                "@min",
                                ["@value", "values"],
                                ["@value", "bin"]
                            ],
                            "max": [
                                "@max",
                                ["@value", "values"],
                                ["@value", "bin"]
                            ],
                            "maxbins": ["@value", "maxBins", 10]
                        },
                        {
                            "type": "aggregate",
                            "groupby": ["bin"],
                            "summarize": [
                                {
                                    "field": "*",
                                    "ops": ["count"]
                                }
                            ]
                        }
                    ]
                ]
            }
        ],
        "signals": [
            {
                "name": "tooltip",
                "init": {},
                "streams": [
                    {"type": "rect:mouseover", "expr": "datum"},
                    {"type": "rect:mouseout", "expr": "{}"}
                ]
            }
        ],
        "scales": [
            {
                "name": "x",
                "type": "ordinal",
                "range": "width",
                "sort": false,
                "domain": {
                    "data": "series",
                    "field": "bin",
                    "sort": true
                }
            },
            {
                "name": "y",
                "type": "linear",
                "range": "height",
                "zero": true,
                "domain": {
                    "data": "series",
                    "field": "count"
                }
            }
        ],
        "axes": [
            {
                "type": "x",
                "scale": "x",
                "layer": "back",
                "title": ["@value", "xAxis.title", ""],
                "properties": {
                    "labels": {
                        "text": {
                            "template": [
                                "@if",
                                ["@value", "discrete", false],
                                "{{datum.data}}",
                                "{{datum.data|number:'.2g'}}"
                            ]
                        }
                    }
                }
            },
            {
                "type": "y",
                "scale": "y",
                "layer": "back",
                "title": ["@value", "yAxis.title", ""]
            }
        ],
        "marks": [
            {
                "type": "rect",
                "from": {"data": "series"},
                "properties": {
                    "enter": {
                        "x": {"scale": "x", "field": "bin", "offset": 1},
                        "width": {"scale": "x", "band": true, "offset": -1},
                        "y": {"scale": "y", "field": "count"},
                        "y2": {"scale": "y", "value": 0}
                    },
                    "update": {
                        "fill": {"value": ["@value", "color", "steelblue"]}
                    },
                    "hover": {
                        "fill": {"value": ["@value", "hover", "red"]}
                    }
                }
            },
            {
                "type": "text",
                "properties": {
                    "enter": {
                        "align": {"value": "center"},
                        "fill": {"value": "#333"}
                    },
                    "update": {
                        "x": {"scale": "x", "signal": "tooltip.bin"},
                        "dx": {"scale": "x", "band": true, "mult": 0.5},
                        "y": {"scale": "y", "signal": "tooltip.count", "offset": -5},
                        "text": {"template": ["@value", "tooltip", "{{tooltip.count}}"]},
                        "fillOpacity": {
                            "rule": [
                                {
                                    "predicate": {
                                        "name": "tooltip",
                                        "id": {"value": null}
                                    },
                                    "value": 0
                                },
                                {"value": 1}
                            ]
                        }
                    }
                }
            }
        ]
    }
]
